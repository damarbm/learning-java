{
  "name": "java-dev",
  "service": "java-dev",
  "remoteUser": "vscode",
  "dockerComposeFile": "docker-compose.devel.yaml",
  "workspaceFolder": "/home/vscode/workspace",
  "containerEnv": {
    "TZ": "Asia/Jakarta"
  },
  "mounts": [
    // caches
    "source=/home/${USER}/.m2,target=/home/vscode/.m2,type=bind"
  ],
  "initializeCommand": "docker network inspect sb-dev-net >/dev/null 2>&1 || docker network create sb-dev-net",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-dependency",
        "vmware.vscode-boot-dev-pack",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "ms-vscode.makefile-tools",
        "yzhang.markdown-all-in-one",
        "ms-azuretools.vscode-docker",
        "google.geminicodeassist"
      ]
    }
  }
}
